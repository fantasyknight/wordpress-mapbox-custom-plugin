<!DOCTYPE html>
<html>
	<head>
		<title>My Webpage</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css">
		<link href='https://api.tiles.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css' rel='stylesheet'/>
		<link href="{{ asset('css/style.min.css') }}" rel="stylesheet"/>

		<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js'></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
		<script src='https://api.tiles.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js'></script>
	</head>

	<body>
		<header></header>

		<main>
			<div class="container">
				<div class="row">
					<div class="mapbox-sidebar col-md-3 px-md-3 px-0 mb-md-0 mb-4">
						<div class="input-group mb-3">
							<div class="form-outline w-100" id="search-wrapper">
								<input id="search-input" type="search" id="form1" class="form-control"/>

								<ul id="search-list" class="nice-scrollbar"></ul>
							</div>
						</div>

						<div class=" switcher mb-3">
							<div class="form-check form-switch">
								<input class="form-check-input" type="checkbox" role="switch" id="only-mine">
								<label class="form-check-label" for="only-mine">
									Only Mine
								</label>
							</div>
						</div>

						<div class="tag-items nice-scrollbar" id="sidebar-tags"></div>
					</div>

					<div class="col-md-9 px-md-3 px-0">
						<div class="mapbox-gl-map" id="log-map"></div>
					</div>
				</div>
			</div>

			<div id="marker-setting" class="d-none">
				<input class="d-none" id="user-id" value={{userID}}>
				<input class="d-none" id="api-url" value={{apiURL}}>

				<div class="d-flex mb-2 justify-content-between align-items-center">
					<label class="mb-0">Name</label>
					<input type="text" required value="My Marker" class="marker-name"/>
				</div>

				<div class="d-flex mb-2 justify-content-between align-items-center">
					<label class="mb-0">Tag</label>

					<select data-placeholder="Your Favorite Types of Bear" class="chosen-select marker-tag" tabindex="17" id="single-label-example"></select>
				</div>

				<div class="d-flex mb-2 justify-content-between align-items-center">
					<label class="mb-0">Add Tag</label>
					<input type="text" class="new-tag" required/>
				</div>

				<div class="d-flex justify-content-end align-items-center">
					<button class="btn btn-success mr-2">Add</button>
					<button class="btn btn-danger">Cancel</button>
				</div>
			</div>

			<div id="marker-info" class="d-none">
				<div class="d-flex justify-content-between align-items-center marker-info-name">
					<span class="mr-2 text-overflow">Name:</span>
					<span id="marker-name-info"></span>
				</div>

				<div class="d-flex justify-content-between align-items-center">
					<span class="mr-2">Tag:</span>
					<span id="marker-tag-info"></span>
				</div>

				<div class="d-flex justify-content-between align-items-center">
					<span class="mr-2">Longitude:</span>
					<span id="marker-lng-info"></span>
				</div>

				<div class="d-flex justify-content-between align-items-center">
					<span class="mr-2">Latitude:</span>
					<span id="marker-lat-info"></span>
				</div>
			</div>
		</main>

		<script src="{{ asset('js/main.js')}} "></script>
	</body>
</html></body></html>
